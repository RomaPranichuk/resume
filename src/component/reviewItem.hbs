<div class='card mb-5'>
    <div class='card-body'>
        <div class='card'>
            <div class='pt-2 pb-2 px-2 card-header'>
                {{#with title}}
                    <h5 class='mb-1'>{{userName}}</h5>
                    <p class='mb-2'>{{caption}}</p>
                    <p class='mb-0'>{{date}}</p>
                {{/with}}
            </div>
            <div class='pt-2 pb-2 px-2'>
                {{#with reviewBody}}
                    {{#with seller}}
                        <p>{{title}}: {{value}}</p>
                    {{/with}}
                    {{#with rating}}
                        <p>{{title}}: {{value}}</p>
                    {{/with}}
                    {{#each text}}
                        <p>{{this}}</p>
                    {{/each}}
                    {{#with advantages}}
                        <b>{{title}}:</b>
                        <p>{{text}}</p>
                    {{/with}}
                    {{#with disadvantages}}
                        <b>{{title}}:</b>
                        <p>{{text}}</p>
                    {{/with}}
                    {{#each images}}
                        <img src='{{this}}' class='ms-0 mx-2 rounded' />
                    {{/each}}
                {{/with}}
            </div>
        </div>
        <div class='row justify-content-end'>
            <section class='col-11'>
                {{#each reviewBody.coments}}
                    <div class='card mt-4 mb-0'>
                        <div class='pt-2 pb-2 px-2'>
                            <h5>{{userName}}</h5>
                            <p class='mb-2'>{{date}}</p>
                            <p class='mb-0'>{{text}}</p>
                        </div>
                    </div>
                {{/each}}
            </section>
        </div>
    </div>
</div>