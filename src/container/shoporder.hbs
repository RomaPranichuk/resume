<main class='p-5'>
    <div class='row'>
        {{#with navigation}}
            <div class='card'>
                <div class='nav'>
                    {{#each links}}
                        <div class='nav-item'>
                            <a href='{{href}}' class='nav-link {{#unless href includeZero=null}} disabled {{/unless}}'>{{text}}</a>
                        </div>
                    {{/each}}
                </div>
            </div>
        {{/with}}
        <div class="mt-5 mb-5">
            <h2>{{header}}</h2>
        </div>
        {{#with contacts_data}}
            <h4>{{title}}</h4>
            <section class="row pt-2">
                {{#each buttons}}
                    <div class="col-3">
                        <button class="
                        {{#if isPrimary includeZero=true}} btn btn-warning {{/if}}
                        {{#if isOutline includeZero=true}} btn btn-outline-warning {{/if}}">{{text}}</button>
                    </div>
                {{/each}}
            </section>
            <div class="row pt-3">
                {{#with form.input.surname}}
                    <section class="col-4">
                        <label class="form-label">{{label}}</label>
                        <input placeholder="{{placeholder}}" class='form-control' />
                        <div class="form-text">{{caption}}</div>
                    </section>
                {{/with}}
                {{#with form.input.name}}
                    <section class="col-4">
                        <label class="form-label">{{label}}</label>
                        <input placeholder="{{placeholder}}" class='form-control' />
                        <div class="form-text">{{caption}}</div>
                    </section>
                {{/with}}
                {{#with form.input.phone}}
                    <div class="pt-3 pe-5">
                        <section class="col-4">
                            <label class="form-label">{{label}}</label>
                            <input placeholder="{{placeholder}}" class='form-control' />
                            <div class="form-text">{{caption}}</div>
                        </section>
                    </div>
                {{/with}}
                {{#with form.input.email}}
                    <section class="col-4">
                        <label class="form-label">{{label}}</label>
                        <input placeholder="{{placeholder}}" class='form-control' />
                        <div class="form-text">{{caption}}</div>
                    </section>
                {{/with}}
            </div>
        {{/with}}
        <div class="row">
            <section class="col-4">
                <div class="card">
                    <div class="card-body">
                        
                    </div>
                </div>
            </section>
        </div>
        {{#each action_block}}

        {{/each}}
    </div>
</main>