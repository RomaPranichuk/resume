{{!
Це код container файлу для summary сторінки,
в якому міститься код, котрий буде віддаватися по шляху (PATH) - "/summary"
}}

<div>
	{{#with main}}
		<main>
			<section>
				<div class="text-center">
					{{> title data="Work history" big=true}}
				</div>
				<div>
					<ul class="list-group">
						{{#each works}}
							<li class="list-group-item">
								<p>{{position}}</p>

								<p>
									{{duration.from}} - 
									{{#if duration.to}} 
										{{duration.to}} 
									{{else}} 
										(досі працюємо) 
									{{/if}}
								</p>

								<div>
									{{#if company.url}}
										{{> link text=company.name href=company.url blank=true noLine=true}}
									{{else}}
										<b>{{company.name}}</b>
									{{/if}}
								</div>


								<h3 class="mt-5 text-center">
									<strong>Projects ({{projectAmount}})</strong>
								</h3>

								<ul class="list-group">
									{{#each projects}}
										<li class="list-group-item">
											<div>{{> link text=name href=url blank=true noLine=true}}</div>

											<div>{{about}}</div>

											<h4 class="text-center mt-4">Project stacks ({{stackAmount}})</h4>

											<div>
												<ol class="list-group list-group-numbered">
													{{#each stacks}}
														<li class="list-group-item">{{name}}</li>	
													{{/each}}
												</ol>
											</div>

											<h4 class="text-center mt-4">Project awards ({{awardAmount}})</h4>

											<div>
												<ol class="list-group list-group-numbered">
													{{#each awards}} 
														<li class="list-group-item">{{name}}</li>
													{{/each}}
												</ol>
											</div>
										</li>
									{{/each}}									
								</ul>
							</li>
						{{/each}}
					</ul>
				</div>
			</section>
		</main>
	{{/with}}
</div>

