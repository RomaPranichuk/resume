<header>
  <section>
    {{#with page_header}}
      <h1 class='text-center'>{{title}}</h1>
      <p
        class='text-center text-uppercase'
      >{{description}}</p>
    {{/with}}
    <br />
    {{#with section}}
      {{#with about_us}}
        <div class='card'>
          <div class='card-body'>
            {{#with title_list}}
              <div class='display-6 text-end'>
                <b>{{main}}</b>
              </div>
              <br />
              <div class='text-end'>
                <h2>{{sub}}</h2>
              </div>
            {{/with}}
            <br />
            {{#with button}}
              <button
                class='btn btn-outline-info'
              >{{text}}</button>
            {{/with}}
          </div>
        </div>
      {{/with}}
    {{/with}}
  </section>
</header>

<main>
  <section>
    {{#with section}}
      {{#with advantage}}
        <div class='card'>
          <div class='card-body'>
            <div class='display-5 text-muted'>
              <b>{{title}}</b>
            </div>
            <br />
            {{#with efficiency}}
              <div class='card'>
                <div class='card-body'>
                  <div class='display-4 text-muted'>
                    <b>{{title}}</b>
                  </div>
                  <br />
                  <h6>{{sub_title}}</h6>
                  <p>{{description}}</p>
                  <button
                    class='btn btn-outline-warning'
                  >{{button}}</button>
                </div>
              </div>
            {{/with}}
            <br />
            {{#with innovation}}
              <div class='card'>
                <div class='card-body'>
                  <div
                    class='display-4 text-muted text-center'
                  >
                    <b>{{title}}</b>
                  </div>
                  <br />
                  <h6 class='text-center'>{{sub_title}}</h6>
                  <p class='text-center'>{{description}}</p>
                  <button
                    class='btn btn-outline-warning'
                  >{{button}}</button>
                </div>
              </div>
            {{/with}}
            <br />
            {{#with collaboration}}
              <div class='card'>
                <div class='card-body'>
                  <div
                    class='display-4 text-muted text-end'
                  >
                    <b>{{title}}</b>
                  </div>
                  <br />
                  <h6 class='text-end'>{{sub_title}}</h6>
                  <p class='text-end'>{{description}}</p>
                  <button
                    class='btn btn-outline-warning'
                  >{{button}}</button>
                </div>
              </div>
            {{/with}}
          </div>
        </div>
      {{/with}}
    {{/with}}
  </section>
</main>

<footer>
  <section>
    {{#with section}}
      {{#with agreement}}
        <div class='card'>
          <div class='card-body'>
            <div class='display-5'>
              <b>{{title}}</b>
            </div>
            <br />
            {{#with info}}
              <div class='card'>
                <div class='card-body'>
                  <h5>{{sub_title}}</h5>
                </div>
                <br />
                {{#with detail}}
                  <div class='card'>
                    <div class='card-body'>

                    </div>
                  </div>
                {{/with}}
              </div>
            {{/with}}
          </div>
        </div>
      {{/with}}
    {{/with}}
  </section>
</footer>